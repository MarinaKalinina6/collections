{% extends 'base.html.twig' %}

{% block title %}Collections{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}

    <div class="container">
        <div><h2 class="text-center">My collections</h2></div>
        <a class="btn btn-outline-dark" href="{{ path('create_collection') }}" role="button"
           style="float: right;">Create</a>
    </div>

    <div class=" text-center container">
        <div class="container">

            <div class="form-inline my-lg-2 my-lg-1">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col" class="h5">â„–</th>
                        <th scope="col" class="h5">Name</th>
                        <th scope="col" class="h5">Description</th>
                        <th scope="col" class="h5">Category</th>
                        <th scope="col" class="h5">Image</th>
                        <th scope="col" class="h5"></th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for row in collection %}
                    <tr class="table">
                        <td class="align-content-center lead">{{ loop.index }}</td>
                        <td class="align-content-center lead">
                            <a class="name"
                               href="{{ path('view_items', { 'id': row.collectionId }) }}">{{ row.name|capitalize }}</a>
                        </td>
                        <td class="align-content-center lead">{{ row.description|capitalize }}</td>
                        <td class="align-content-center lead">{{ row.category }}</td>
                        <td class="align-content-center lead">
                            {% if row.image is not null %}
                                <img src="/files?path={{ row.image }}">
                            {% endif %}
                        </td>
                        <td class="align-top">
                            <div class=" btn-group">
                                <div data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                         fill="currentColor"
                                         class="bi bi-three-dots" viewBox="0 0 16 16">
                                        <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3"/>
                                    </svg>
                                </div>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item"
                                           href="{{ path('update_collection', { 'id': row.collectionId }) }}">Edit</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                           href="{{ path('delete_collection', { 'id': row.collectionId }) }}">Delete</a>
                                    </li>
                                </ul>

                            </div>

                        </td>
                        {% endfor %}

                    </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}